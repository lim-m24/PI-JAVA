<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="comunityAnchorPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.ComunityFrontController" prefWidth="1920" prefHeight="1080">
    <VBox spacing="20" style="-fx-background-color: #1A2A44; -fx-padding: 20;">
        <Label text="Categories" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" />
        <ScrollPane fx:id="categoryScrollPane" hbarPolicy="ALWAYS" vbarPolicy="NEVER"
                    fitToHeight="true" fitToWidth="false" pannable="true"
                    style="-fx-background: #1A2A44;" prefViewportHeight="200" prefViewportWidth="1200">
            <content>
                <HBox fx:id="categorySlider" alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;" />
            </content>
        </ScrollPane>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Community" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" />
            <Button text="Suggestions" style="-fx-text-fill: white;" />
            <Button text="Popular" style="-fx-text-fill: white;" />
            <Button text="My Community" style="-fx-text-fill: white;" />
            <Button text="+ Create Community" style="-fx-background-color: #3B82F6; -fx-text-fill: white;" />
        </HBox>
        <GridPane fx:id="communityGrid" hgap="10" vgap="10" />
    </VBox>
</AnchorPane>