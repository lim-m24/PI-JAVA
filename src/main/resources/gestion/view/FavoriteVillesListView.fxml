<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.Controllers.FavoriteVillesListController"
      spacing="10"
      style="-fx-background-color: white;">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Villes Favorites" styleClass="view-title"/>
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Rechercher une ville favorite..." styleClass="search-field"/>
    </HBox>

    <ListView fx:id="villeListView" VBox.vgrow="ALWAYS" styleClass="villes-list">
        <VBox.margin>
            <Insets top="10"/>
        </VBox.margin>
    </ListView>
</VBox> 